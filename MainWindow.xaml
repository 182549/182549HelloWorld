<Window x:Class="_182549HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_182549HelloWorld"
        mc:Ignorable="d"
        Title="Program" Height="300" Width="350">
    <StackPanel>
        <Label x:Name="message" Content="Hello World!" FontSize="15" HorizontalAlignment="Center"/>
        <Label>Line 2</Label>
        <TextBox x:Name="txtName" Text="Enter Your Name Here..."/>
        <Button x:Name="btnGreeting" Content="Click Me" Click="btnGreeting_Click" Height="30" Width="75"/>
    </StackPanel>
</Window>
